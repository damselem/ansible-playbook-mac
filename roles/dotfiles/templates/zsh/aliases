# vim:syntax=sh

# *NIX
alias ls='ls -laGFh'

# Git
alias gs='git status'
alias gl="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias gg="git config user.email 'damselem@google.com'"

# Workspace
alias wws='cd ~/dev/waze'
alias gws='cd ~/go/src'

# Rclone
alias 1pass-push='rclone --exclude ".DS_Store" copy /Volumes/GoogleDrive/Sync/1Password dropbox:1Password -v'
alias 1pass-pull='rclone --exclude ".DS_Store" copy dropbox:1Password /Volumes/GoogleDrive/Sync/1Password -v'
